[module/wlan]
type = internal/network
interface = wlp2s0
format-connected    = %{A1:$HOME/.config/polybar/scripts/dmenu-wifi:}<label-connected>%{A}
format-disconnected = %{A1:$HOME/.config/polybar/scripts/dmenu-wifi:}<label-disconnected>%{A}
